{
  "id": "com.axosoft.GitKraken",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "18.08",
  "command": "gitkraken",
  "tags": [
    "proprietary"
  ],
  "separate-locales": false,
  "finish-args": [
    "--require-version=0.11.1",
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--socket=ssh-auth",
    "--share=network",
    "--device=dri",
    "--filesystem=host",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "modules": [
    {
      "name": "ar",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 /usr/lib/$(gcc -print-multiarch)/libbfd-*.so -t ${FLATPAK_DEST}/lib/",
        "install -Dm0755 $(which ar) ${FLATPAK_DEST}/bin/"
      ]
    },
    {
      "name": "git",
      "make-args": [
        "NO_TCLTK=YesPlease",
        "INSTALL_SYMLINKS=1"
      ],
      "make-install-args": [
        "NO_TCLTK=YesPlease",
        "INSTALL_SYMLINKS=1"
      ],
      "post-install": [
        "find . -type f -name perllocal.pod -delete"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.kernel.org/pub/software/scm/git/git-2.24.0.tar.xz",
          "sha256": "9f71d61973626d8b28c4cdf8e2484b4bf13870ed643fed982d68b2cfd754371b"
        }
      ]
    },
    {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 git-lfs ${FLATPAK_DEST}/bin/"
      ],
      "sources": [
        {
          "type": "archive",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.9.0/git-lfs-linux-amd64-v2.9.0.tar.gz",
          "sha256": "afe269af8c60f2f36f9c9203dd0af279f0b8f74e1a36493330b82d99adc05ddc"
        }
      ]
    },
    {
      "name": "gitkraken",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 $(which desktop-file-edit) ${FLATPAK_DEST}/bin/",
        "install -Dm0755 apply_extra.sh ${FLATPAK_DEST}/bin/apply_extra",
        "install -Dm0755 gitkraken.sh ${FLATPAK_DEST}/bin/gitkraken",
        "install -Dm0644 com.axosoft.GitKraken.appdata.xml ${FLATPAK_DEST}/share/appdata/com.axosoft.GitKraken.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "path": "apply_extra.sh"
        },
        {
          "type": "file",
          "path": "gitkraken.sh"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.appdata.xml"
        },
        {
          "type": "extra-data",
          "filename": "gitkraken.deb",
          "url": "https://release.axocdn.com/linux/GitKraken-v6.3.1.deb",
          "sha256": "09c9ad665beaa654acc8ffeec04799977b5948350357e19d2dce542fcd1f311c",
          "size": 77699698
        }
      ]
    }
  ]
}
