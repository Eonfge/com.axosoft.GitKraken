{
  "id": "com.axosoft.GitKraken",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "18.08",
  "command": "gitkraken",
  "tags": [
    "proprietary"
  ],
  "separate-locales": false,
  "finish-args": [
    "--require-version=0.11.1",
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--socket=ssh-auth",
    "--share=network",
    "--device=dri",
    "--filesystem=host",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "git",
      "make-args": [
        "NO_TCLTK=YesPlease",
        "INSTALL_SYMLINKS=1"
      ],
      "make-install-args": [
        "NO_TCLTK=YesPlease",
        "INSTALL_SYMLINKS=1"
      ],
      "post-install": [
        "find . -type f -name perllocal.pod -delete"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.kernel.org/pub/software/scm/git/git-2.22.0.tar.xz",
          "sha256": "159e4b599f8af4612e70b666600a3139541f8bacc18124daf2cbe8d1b934f29f"
        }
      ]
    },
    {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir --parents /app/libexec/git-core/",
        "install -Dm0755 git-lfs /app/libexec/git-core/"
      ],
      "sources": [
        {
          "type": "archive",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.7.2/git-lfs-linux-amd64-v2.7.2.tar.gz",
          "sha256": "89f5aa2c29800bbb71f5d4550edd69c5f83e3ee9e30f770446436dd7f4ef1d4c"
        }
      ]
    },
    {
      "name": "gitkraken",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 apply_extra /app/bin/apply_extra",
        "install -Dm0755 gitkraken.sh /app/bin/gitkraken",
        "install -Dm0644 com.axosoft.GitKraken.png /app/share/icons/hicolor/512x512/apps/com.axosoft.GitKraken.png",
        "install -Dm0644 com.axosoft.GitKraken.appdata.xml /app/share/appdata/com.axosoft.GitKraken.appdata.xml",
        "install -Dm0644 gitkraken.desktop /app/share/applications/com.axosoft.GitKraken.desktop"
      ],
      "sources": [
        {
          "type": "script",
          "dest-filename": "apply_extra",
          "commands": [
            "tar -xf gitkraken.tar.gz",
            "rm -f gitkraken.tar.gz"
          ]
        },
        {
          "type": "script",
          "commands": [
            "export PATH=\"${PATH}:/app/libexec/git-core\"",
            "exec env /app/extra/gitkraken/gitkraken"
          ],
          "dest-filename": "gitkraken.sh"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.appdata.xml"
        },
        {
          "type": "file",
          "path": "gitkraken.desktop"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.png"
        },
        {
          "type": "extra-data",
          "filename": "gitkraken.tar.gz",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://release.axocdn.com/linux/GitKraken-v6.0.0.tar.gz",
          "sha256": "5b1c2278404d7c2864a75274c5c59fe03392b07f48edd7d21c0549fdd2205df3",
          "size": 149278299
        }
      ]
    }
  ]
}
