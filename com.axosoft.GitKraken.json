{
  "id": "com.axosoft.GitKraken",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "18.08",
  "command": "gitkraken",
  "tags": [
    "proprietary"
  ],
  "separate-locales": false,
  "finish-args": [
    "--require-version=0.11.1",
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--socket=ssh-auth",
    "--share=network",
    "--device=dri",
    "--filesystem=host",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "git",
      "make-args": [
        "NO_TCLTK=YesPlease",
        "INSTALL_SYMLINKS=1"
      ],
      "make-install-args": [
        "NO_TCLTK=YesPlease",
        "INSTALL_SYMLINKS=1"
      ],
      "post-install": [
        "find . -type f -name perllocal.pod -delete"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.kernel.org/pub/software/scm/git/git-2.23.0.tar.xz",
          "sha256": "234fa05b6839e92dc300b2dd78c92ec9c0c8d439f65e1d430a7034f60af16067"
        }
      ]
    },
    {
      "name": "git-lfs",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 git-lfs ${FLATPAK_DEST}/bin/"
      ],
      "sources": [
        {
          "type": "archive",
          "strip-components": 0,
          "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.8.0/git-lfs-linux-amd64-v2.8.0.tar.gz",
          "sha256": "54054178deea7c97ce58edf9c0a2f79eb30c1e836fbc7e6dece9b2c9ff516863"
        }
      ]
    },
    {
      "name": "gitkraken",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 apply_extra ${FLATPAK_DEST}/bin/apply_extra",
        "install -Dm0755 gitkraken.sh ${FLATPAK_DEST}/bin/gitkraken",
        "install -Dm0644 com.axosoft.GitKraken.png ${FLATPAK_DEST}/share/icons/hicolor/512x512/apps/com.axosoft.GitKraken.png",
        "install -Dm0644 com.axosoft.GitKraken.appdata.xml ${FLATPAK_DEST}/share/appdata/com.axosoft.GitKraken.appdata.xml",
        "install -Dm0644 gitkraken.desktop ${FLATPAK_DEST}/share/applications/com.axosoft.GitKraken.desktop"
      ],
      "sources": [
        {
          "type": "script",
          "dest-filename": "apply_extra",
          "commands": [
            "tar -xf gitkraken.tar.gz",
            "rm -f gitkraken.tar.gz"
          ]
        },
        {
          "type": "script",
          "commands": [
            "exec env /app/extra/gitkraken/gitkraken"
          ],
          "dest-filename": "gitkraken.sh"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.appdata.xml"
        },
        {
          "type": "file",
          "path": "gitkraken.desktop"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.png"
        },
        {
          "type": "extra-data",
          "filename": "gitkraken.tar.gz",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://release.axocdn.com/linux/GitKraken-v6.2.1.tar.gz",
          "sha256": "bc030dd78ba53845c03201697f57a5de45a0aa019760d6f31372f66ab311dde1",
          "size": 116363383
        }
      ]
    }
  ]
}
