{
    "id": "com.axosoft.GitKraken",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "19.08",
    "command": "gitkraken",
    "tags": [
        "proprietary"
    ],
    "separate-locales": false,
    "finish-args": [
        "--require-version=0.11.1",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--socket=ssh-auth",
        "--socket=pcsc",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfs",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "modules": [
        {
            "name": "ImageMagick",
            "config-opts": [
                "--enable-static=no",
                "--with-modules",
                "--disable-docs",
                "--disable-deprecated",
                "--without-autotrace",
                "--without-bzlib",
                "--without-djvu",
                "--without-dps",
                "--without-fftw",
                "--without-fontconfig",
                "--without-fpx",
                "--without-freetype",
                "--without-gvc",
                "--without-jbig",
                "--without-jpeg",
                "--without-lcms",
                "--without-lzma",
                "--without-magick-plus-plus",
                "--without-openexr",
                "--without-openjp2",
                "--without-pango",
                "--without-raqm",
                "--without-tiff",
                "--without-webp",
                "--without-wmf",
                "--without-x",
                "--without-xml",
                "--without-zlib"
            ],
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://imagemagick.org/download/ImageMagick-7.0.10-7.tar.xz",
                    "sha256": "7a0365e20eeef2129cb8ffee1acf1d21cdbc2ea8b57ce2941c6ca0e935d4f843"
                }
            ]
        },
        {
            "name": "pcsc-lite",
            "config-opts": [
                "--disable-libudev",
                "--disable-libsystemd",
                "--without-systemdsystemunitdir",
                "--disable-serial",
                "--disable-usb",
                "--disable-documentation"
            ],
            "post-install": [
                "rm /app/sbin/pcscd",
                "rmdir /app/sbin || true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LudovicRousseau/PCSC/archive/pcsc-1.8.26.tar.gz",
                    "sha256": "87da93642ba45fdbec07462c9ffabecbdda02407719fa21402f20fa35910425a"
                }
            ]
        },
        {
            "name": "ar",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0755 /usr/lib/$(gcc -print-multiarch)/libbfd-*.so -t ${FLATPAK_DEST}/lib/",
                "install -Dm0755 $(which ar) ${FLATPAK_DEST}/bin/"
            ]
        },
        {
            "name": "git",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0755 $(which git) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-clang-format) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-cvsserver) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-receive-pack) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-shell) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-upload-archive) ${FLATPAK_DEST}/bin/",
                "install -Dm0755 $(which git-upload-pack) ${FLATPAK_DEST}/bin/"
            ]
        },
        {
            "name": "git-lfs",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0755 git-lfs ${FLATPAK_DEST}/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "strip-components": 0,
                    "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.9.2/git-lfs-linux-amd64-v2.9.2.tar.gz",
                    "sha256": "04346234130e518d165bdc7e9964375bbeb3b98efabd042084530cc34288274c"
                }
            ]
        },
        {
            "name": "gitkraken",
            "buildsystem": "simple",
            "build-commands": [
                ". ${FLATPAK_BUILDER_BUILDDIR}/build"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "apply_extra.sh"
                },
                {
                    "type": "file",
                    "path": "gitkraken-build.sh",
                    "dest-filename": "build"
                },
                {
                    "type": "file",
                    "path": "gitkraken.sh"
                },
                {
                    "type": "file",
                    "path": "com.axosoft.GitKraken.metainfo.xml"
                },
                {
                    "type": "file",
                    "dest-filename": "gitkraken.deb",
                    "url": "https://release.axocdn.com/linux/GitKraken-v6.5.4.deb",
                    "sha256": "19f8c6de22365a31245b33f6ea674d691c2d143d3590dea2763531bf3a445c3e",
                    "size": 74362550,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://www.gitkraken.com/download.html",
                        "version-pattern": "Latest release: ((?:\\d+\\.)?(?:\\d+\\.)?\\d+)",
                        "url-template": "https://release.axocdn.com/linux/GitKraken-v$version.deb"
                    }
                },
                {
                    "type": "extra-data",
                    "filename": "gitkraken.deb",
                    "url": "https://release.axocdn.com/linux/GitKraken-v6.5.4.deb",
                    "sha256": "19f8c6de22365a31245b33f6ea674d691c2d143d3590dea2763531bf3a445c3e",
                    "size": 74362550,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://www.gitkraken.com/download.html",
                        "version-pattern": "Latest release: ((?:\\d+\\.)?(?:\\d+\\.)?\\d+)",
                        "url-template": "https://release.axocdn.com/linux/GitKraken-v$version.deb"
                    }
                }
            ]
        }
    ]
}
